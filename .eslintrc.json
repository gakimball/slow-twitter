{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "semi": ["error", "never"]
  },
  "env": {
    "es2020": true,
    "node": true
  },
  "ignorePatterns": [
    "node_modules/**/*"
  ],
  "parser": "@typescript-eslint/parser"
}
