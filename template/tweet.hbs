{{#*inline 'tweet'}}
  <p>
    <strong>
      {{ user.name }}
    </strong>
    <small>
      (@{{ user.screen_name }})
    </small>
  </p>

  {{#unless retweeted_status}}
    <p>{{{ fullText this }}}</p>

    {{#each extended_entities.media}}
      <img src="{{ media_url_https }}" />
    {{/each}}
  {{/unless}}

  {{#if retweeted_status}}
    <blockquote>
      {{> tweet retweeted_status}}
    </blockquote>
  {{/if}}

  {{#if quoted_status}}
    <blockquote>
      {{> tweet quoted_status}}
    </blockquote>
  {{/if}}

  <p>
    <small>
      <a href="https://twitter.com/{{ user.screen_name }}/status/{{ id_str }}">
        {{ created_at }}
      </a>
    </small>
  </p>

{{/inline}}

{{#each tweets}}
  {{> tweet this}}

  {{#unless @last}}
    <hr>
  {{/unless}}
{{/each}}
